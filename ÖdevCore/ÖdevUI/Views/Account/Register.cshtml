@model UserAddViewModel

@{
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

<style>
    #registerBox {
        margin-top: 120px;
        max-width: 600px;
        height: 640px;
        border: 1px solid #9C9C9C;
        padding: 20px;
        margin-top: -85px;
        background-color: #EAEAEA;
    }
    body {
        background-color: #DCCFFF;
    }
        
</style>

<form asp-controller="Account" asp-action="Register" method="post">
    
    <div class="container mt-4" id="registerBox">
   
        <h3 class="text-center text-info">Kayıt Ol</h3>
    <div class="form-group pl-5 pr-5">
        <label asp-for="User.Name">Ad</label>
        <input asp-for="User.Name" class="form-control" placeholder="Ad" />
        <span asp-validation-for="User.Name"></span>
    </div>
    
    <div class="form-group  pl-5 pr-5">
        <label asp-for="User.Surname">Soyad</label>
        <input asp-for="User.Surname" class="form-control" placeholder="Soyad" />
        <span asp-validation-for="User.Surname"></span>
    </div>
    
    <div class="form-group pl-5 pr-5">
        <label asp-for="User.Mail">E-Posta</label>
        <input asp-for="User.Mail" class="form-control" placeholder="E-posta" />
        <span asp-validation-for="User.Mail"></span>
    </div>
    
    <div class="form-group  pl-5 pr-5">
        <label asp-for="User.Password">Şifre</label>
        <input asp-for="User.Password" class="form-control" placeholder="Şifre" />
        <span asp-validation-for="User.Password"></span>
    </div>
    
        <div class="form-group pl-5 pr-5">

            <label asp-for="User.CityId">Şehirler</label>
            <select asp-for="User.CityId" class="form-control"
                    asp-items="@(new SelectList(Model.City, "Id", "CityName"))"></select>
            <span asp-validation-for="User.CityId"></span>

        </div>
    <button type="submit" value="Register " class="btn-success ml-5">Kayıt Ol</button>
    </div>
</form>