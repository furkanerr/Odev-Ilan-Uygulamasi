@model UserUpdateViewModel

@{
    Layout =  "~/Views/Shared/_AnasayfaLayout1.cshtml";
}
<style>
    body {
        background-color: #F1F0FF;
    }
</style>
<form asp-controller="Account" asp-action="UserDataUpdate" method="post">

   


    <div class="form-group">
        <label asp-for="User.Name"></label>
        <input asp-for="User.Name" class="form-control" placeholder="Ad" />
        <span asp-validation-for="User.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Surname"></label>
        <input asp-for="User.Surname" class="form-control" placeholder="Soyad" />
        <span asp-validation-for="User.Surname"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="User.Mail"></label>
        <input asp-for="User.Mail" class="form-control" placeholder="E-posta" />
        <span asp-validation-for="User.Mail"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.CityId"></label>
        <select asp-for="User.CityId" class="form-control" asp-items="@(new SelectList(Model.City,"Id","CityName"))"></select>
        <span asp-validation-for="User.CityId"></span>

    </div>


    <div class="form-group">
        <label asp-for="User.Password"></label>
        <input asp-for="User.Password" class="form-control" placeholder="Şifre" />
        <span asp-validation-for="User.Password"></span>
    </div>

    <input type="hidden" asp-for="User.Id" />

    <input type="submit" value="Update" class="btn btn-success" />

</form>